println("Lab 3.13 - Palindrome");

println("Enter a sequence of words: ");
String sentence = readLine();
String[] letters = sentence.split("");
int l = letters.length;
String reverse = "";

for (int i = l-1; i >= 0; i--) {
	reverse += letters[i];
}

if (sentence.equals(reverse)) {
	println("You have a palindrome");
} else {
	println("You do not have a palindrome");
}

println("Goodbye.");